{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Built-in Server and Debug",
            "type": "php",
            "request": "launch",
            "noDebug": false,
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "${workspaceFolder}"
            ],
            "program": "",
            "cwd": "${workspaceFolder}",
            "port": 9003,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Development Server \\\u0028http://localhost:([0-9]+)\\\u0029 started",
                "uriFormat": "http://localhost:%s/public/auth/register.php"
            },
            "pathMappings": {
                "${workspaceFolder}": "/"
            },
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=9003"
            }
        }
    ]
}