{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch register.php",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/register.php",
            "cwd": "${workspaceFolder}",
            "port": 9003,
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=9003"
            }
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003,
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=9003"
            }
        },
        {
            "name": "Launch Built-in web server",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes",
                "-S",
                "localhost:8000"
            ],
            "program": "",
            "cwd": "${workspaceRoot}",
            "port": 9003,
            "serverReadyAction": {
                "pattern": "Development Server \\\u0028http://localhost:([0-9]+)\\\u0029 started",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        },
       {
      "name": "Launch Built-in Server and Debug",
      "type": "php",
      "request": "launch",
      "noDebug": false,
      "runtimeArgs": [
        "-S",
        "localhost:8000",
        "-t",
        "${workspaceFolder}"
      ],
      "cwd": "${workspaceFolder}",
      "port": 9003,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Development Server \\\u0028http://localhost:([0-9]+)\\\u0029 started",
        "uriFormat": "http://localhost:%s/auth/login.php"
      },
      "pathMappings": {
        "${workspaceFolder}": "/"
      }
    }
    ]
}